{
    "compilerOptions": {
      "module": "NodeNext", 
      "moduleResolution": "NodeNext",
      "experimentalDecorators": true,
      "target": "ES5", 
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true, 
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "include": ["src/**/*"]
  }